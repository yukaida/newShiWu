<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp">

    <ImageView
        android:id="@+id/home_rv_item_pic"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_launcher" />

    <TextView
        android:id="@+id/home_rv_item_des"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:text="没有描述信息"
        app:layout_constraintStart_toEndOf="@+id/home_rv_item_pic"
        app:layout_constraintTop_toTopOf="@+id/home_rv_item_pic" />

    <TextView
        android:id="@+id/home_rv_item_pushman"
        android:layout_width="160dp"
        android:layout_height="20dp"
        android:gravity="end"
        android:text="发布者"
        app:layout_constraintBottom_toBottomOf="@+id/home_rv_item_pic"
        app:layout_constraintStart_toStartOf="@+id/home_rv_item_des" />
</androidx.constraintlayout.widget.ConstraintLayout>
